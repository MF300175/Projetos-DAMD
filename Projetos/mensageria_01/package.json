{
  "name": "damd-projetos",
  "version": "1.0.0",
  "description": "Portfólio completo do curso DAMD - PUC Minas",
  "main": "index.js",
  "scripts": {
    "setup:all": "npm run setup:v1 && npm run setup:v2 && echo 'Setup Flutter manual necessário'",
    "setup:v1": "cd ListaCompras_MS-v1 && npm install",
    "setup:v2": "cd ListaCompras_MS-v2 && npm install",
    "start:v1": "cd ListaCompras_MS-v1 && npm start",
    "start:v2": "cd ListaCompras_MS-v2 && docker-compose up",
    "test:all": "npm run test:v1 && npm run test:v2",
    "test:v1": "cd ListaCompras_MS-v1 && npm test",
    "test:v2": "cd ListaCompras_MS-v2 && npm test",
    "clean": "find . -name node_modules -type d -exec rm -rf {} + 2>/dev/null || true"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "flutter",
    "rabbitmq",
    "offline-first"
  ],
  "author": "Mauricio Fernandes Leite",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MF300175/DAMD-Projetos.git"
  }
}